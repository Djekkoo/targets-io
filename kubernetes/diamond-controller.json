{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"diamond",
      "labels":{
         "name":"diamond"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "name":"diamond"
      },
      "template":{
         "metadata":{
            "labels":{
               "name":"diamond"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"diamond",
                  "image":"lesaux/diamond-containercollector",
                  "volumeMounts": [
                       {

                           "mountPath": "/proc:/host_proc:ro"
                       },
                      {

                          "mountPath": "/var/run/docker.sock:/var/run/docker.sock:ro"
                      }

                   ]
               }
            ],
            "env":[
                 {
                     "name":"GRAPHITE_HOST",
                     "image":"146.148.5.81"

                 },
                {
                    "name":"GRAPHITE_PORT",
                    "image":"2003"

                },
                {
                    "name":"DOCKER_HOSTNAME",
                    "image":"kubernetes-minion-tscr"

                },
                {
                    "name":"INTERVAL",
                    "image":"5"

                }
            ]
         }
      }
   }
}
