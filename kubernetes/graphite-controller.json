{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"graphite",
      "labels":{
         "name":"graphite"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "name":"graphite"
      },
      "template":{
         "metadata":{
            "labels":{
               "name":"graphite"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"graphite",
                  "image":"gcr.io/targets-io-docker/graphite:latest",
                  "ports":[
                     {
                        "name": "graphite-carbon",
                        "containerPort":2003,
                        "protocol":"TCP"
                     },
                     {
                        "name": "graphite-ui",
                        "containerPort": 80,
                        "hostPort": 80
                     }
                  ]
               }
            ]
         }
      }
   }
}
